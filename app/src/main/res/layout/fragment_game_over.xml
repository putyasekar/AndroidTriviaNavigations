<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lose_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDC0E6"
        tools:context=".GameOverFragment">

        <ImageView
            android:id="@+id/iv_lose"
            android:layout_width="@dimen/_0"
            android:layout_height="@dimen/_192dp"
            android:layout_marginStart="@dimen/_16"
            android:layout_marginTop="@dimen/_132"
            android:layout_marginEnd="@dimen/_16"
            android:contentDescription="@string/image_lose"
            android:src="@drawable/try_again"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_32"
            android:text="@string/try_again"
            app:layout_constraintEnd_toEndOf="@+id/iv_lose"
            app:layout_constraintStart_toStartOf="@+id/iv_lose"
            app:layout_constraintTop_toBottomOf="@+id/iv_lose" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>